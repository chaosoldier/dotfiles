music_directory "<%= "#{ENV['EXTERNAL_DRIVE_PATH']}/music" || '/path/to/music/dir' %>"
playlist_directory "~/.mpd/playlists"
db_file "~/.mpd/database"
log_file "syslog"
state_file "~/.mpd/state"
auto_update "yes"

audio_output {
  type "alsa"
  name "ALSA"
}

audio_output {
  type        "httpd"
  name        "Murilo's HTTP Stream"
  port        "6666"
  bitrate     "128"
  max_clients "0"
}
