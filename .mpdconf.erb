music_directory    "/Volumes/music"
playlist_directory "~/.mpd/playlists"
db_file            "~/.mpd/database"
state_file         "~/.mpd/state"
log_file           "syslog"
auto_update        "yes"
bind_to_address    "0.0.0.0"

<% if RUBY_PLATFORM =~ /darwin/ %>
  audio_output {
    type       "osx"
    name       "CoreAudio"
    mixer_type "software"
  }
<% end %>

<% if RUBY_PLATFORM =~ /linux/ %>
  audio_output {
    type       "alsa"
    name       "ALSA"
    mixer_type "software"
  }
<% end %>

audio_output {
  type        "httpd"
  name        "mpereira\"s HTTP Stream"
  port        "6666"
  bitrate     "128"
  max_clients "0"
}
