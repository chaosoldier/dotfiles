color0 666666 # dark grey
color1 33ff00 # green
color2 ff3300 # red

# avoid screen flicker
double_buffer

# font
use_xft
xftfont terminus:size=9
xftalpha 1

# fork it to background when starting
background yes

# update stats every half of second
update_interval 0.5

# width
minimum_size 1366

# no gay border
border_inner_margin 0

# spawn its own window with black background and as a dock
own_window yes
own_window_type dock

# only shows 'if_up' block if its binded to an address
if_up_strictness address

# adds space around some objects to avoid them to move things around
use_spacer left

TEXT
 \
${color0}cpu${color} ${cpu}% \
${color0}ram${color} ${mem} \
${color0}bat${color} ${battery_bar 9,20} ${battery_time} \
${color0}/${color} ${fs_used_perc /}% \
${if_up eth0}\
${color0}eth0${color} ${color2}${downspeedf eth0}KiB/s ${color}${color1}${upspeedf eth0}KiB/s${color} \
${endif}\
${if_up wlan0}\
${color0}wlan0${color} ${color2}${downspeedf wlan0}KiB/s${color}${color1}${upspeedf wlan0}KiB/s${color} \
${endif}\
${color0}up${color} ${uptime_short} \
${color0}load${color} ${loadavg} \
${alignr}\
${if_mpd_playing}\
${mpd_smart 60} (${mpd_elapsed}/${mpd_length}) \
${endif}
