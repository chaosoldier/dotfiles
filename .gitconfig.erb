[user]
	name = Murilo Pereira
	email = murilo@murilopereira.com
[core]
	editor = mvim -v
	mergeoptions = --no-ff
[merge]
	tool = mvimdiff
[diff]
	tool = mvimdiff
[difftool]
	tool = mvimdiff
	prompt = false
[difftool "mvimdiff"]
	cmd = mvimdiff -dv $LOCAL $REMOTE
[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[github]
	user = mpereira
	token = <%= ENV['GITHUB_TOKEN'] || 'deadbeef' %>
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
  l  = log --graph --pretty=format:'%Cred%h%Creset %C(cyan)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
