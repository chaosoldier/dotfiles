# System.
alias :q='exit'
alias :wq='exit'
alias q='exit'
alias quit='exit'
alias c='clear'
alias halt='sudo halt'
alias reboot='sudo reboot'
alias grep='grep --color=auto'
alias psc="echo '%CPU %MEM   PID COMMAND' && ps hgaxo %cpu,%mem,pid,comm | sort -nrk1 | head -n 10"
alias psm="echo '%CPU %MEM   PID COMMAND' && ps hgaxo %cpu,%mem,pid,comm | sort -nrk2 | head -n 10"
alias sps='ps aux | grep -v grep | grep -i'
alias h='history | grep -i'
alias t='tmux'
alias vim='mvim -v'
alias v='mvim -v'
alias wallpaper='feh --bg-scale'

# File management.
alias ..='cd ..'
alias ls='ls --color=auto -F --group-directories-first'
alias la='ls -A'
alias ll='ls -l'
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -ria'
alias mkdir='mkdir -p'
alias ducks='du -cksh * | sort -rh | head -11'

# Pacman.
alias pacman='sudo pacman'
alias pacup='pacman -Syu'
alias pacw='pacman -Qu'
alias pacin='pacman -S'
alias pacout='pacman -Rcsn'
alias pacs="pacman -Sl | cut -d ' ' -f 2 | grep"
alias pac='pacsearch'
alias pacq='paclocalsearch'
alias pacinfo='pacman -Si'

# Yaourt.
alias yaoup='yaourt -Syyu --aur'
alias yaow='yaourt -Qu'
alias yaoin='yaourt -S'
alias yaout='yaourt -Rcsn'
alias yaos="yaourt -Sl | cut -d ' ' -f 1 | grep"
alias yao='yaourt -Ss'
alias yaoq='yaourt -Qs'
alias yaoinfo='yaourt -Si'
