statusbar = {
  items = {
    time         = "{sb $Z} ";
    window       = ":: {sb [$winref] $tag $itemname} ";
    window_empty = ":: {sb [$winref] $tag $itemname} ";
    prompt       = "{prompt}";
    prompt_empty = "{prompt}";
  };

  default = {
    window = {
      type      = "window";
      placement = "top";
      visible   = "active";
      items     = { window  = { }; window_empty = { }; typing_notice = { }; };
    };

    window_inact = {
      type      = "window";
      placement = "top";
      visible   = "inactive";
      items     = { window = { }; window_empty = { }; };
    };


    topic = {
      type      = "root";
      placement = "bottom";
      position  = "1";
      visible   = "always";
      items     = { topic = { }; topic_empty = { }; };
    };

    prompt = {
      items = {
        uberprompt = { priority = "-1"; };
        input      = { priority = "10"; };
      };
      position = "100";
    };

    awl_0 = {
      items = {
        barstart = { priority = "100"; };
        awl_0    = { };
        barend   = { priority = "100"; alignment = "right"; };
      };
    };

    awl_1 = {
      items = {
        barstart = { priority = "100"; };
        awl_1    = { };
        barend   = { priority = "100"; alignment = "right"; };
      };
    };
  };
};

